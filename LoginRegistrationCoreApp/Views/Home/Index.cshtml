@{
    ViewData["Title"] = "Home Page";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

    .split-container {
        display: flex;
        height: 100vh;
    }

    .split-left {
        flex: 1;
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        transition: flex 0.5s ease-out;
    }

    .split-right {
        flex: 1;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: flex 0.5s ease-out;
    }

    .content {
        text-align: center;
        padding: 20px;
    }

    .form-container {
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        width: 300px;
    }

    .expand-left .split-left {
        flex: 2;
    }

    .expand-left .split-right {
        flex: 1;
    }

    .expand-right .split-left {
        flex: 1;
    }

    .expand-right .split-right {
        flex: 2;
    }

    .btn-custom {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        border: none;
        color: white;
    }

    .auth-toggle {
        cursor: pointer;
        color: #6e8efb;
        text-decoration: underline;
    }
</style>

<div class="split-container" id="container">
    <div class="split-left">
        <div class="content">
            <h1>Welcome to Our Platform</h1>
            <p>Experience the future of seamless connectivity.</p>
        </div>
    </div>
    <div class="split-right">
        <div class="form-container">
            <div id="loginForm">
                <h2>Login</h2>
                <form>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="loginEmail" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="loginPassword" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-custom w-100">Login</button>
                </form>
                <p class="mt-3">
                    New here? <span class="auth-toggle" id="showRegister">Register</span>
                </p>
            </div>
            <div id="registerForm" style="display: none;">
                <h2>Register</h2>
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="registerUsername" placeholder="Username" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="registerEmail" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="registerPassword" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-custom w-100">Register</button>
                </form>
                <p class="mt-3">
                    Already have an account? <span class="auth-toggle" id="showLogin">Login</span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#showRegister').click(function () {
                $('#loginForm').hide();
                $('#registerForm').show();
                $('#container').removeClass('expand-left').addClass('expand-right');
            });

            $('#showLogin').click(function () {
                $('#registerForm').hide();
                $('#loginForm').show();
                $('#container').removeClass('expand-right').addClass('expand-left');
            });
        });
    </script>
}